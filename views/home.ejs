<%- include('partials/header'); -%>

<div class="content-wrapper1">
  <form class="task">
    <h4>Add Task</h4>
    <label for="Request">Request Types</label>
    <select name="Request" id="Request" data-live-search="true">
      <option value="0">Select Request Type</option>
    </select>
    <div id="actionTask">
      <label style="margin-top: 50px">Action Task</label>
      <div class="task-options"></div>
      <label for="comment" style="margin-top: 30px"
        >Comments/Ticket Number/Email Subject</label
      >
      <textarea
        name="comment"
        id="comment"
        cols="5"
        placeholder="Enter task details"
        rows="5"
      ></textarea>
      <button class="submit-task disabled" disabled>Start Timer</button>
      <div class="timer-wrapper">
        <button class="stop-timer">Submit Task</button>
        <div class="controls">
          <div class="pause">
            <img src="/images/pause.png" alt="" />
            <span>Pause</span>
          </div>
          <div class="play">
            <img src="/images/play.png" alt="" />
            <span>Play</span>
          </div>
        </div>
        <div class="timer"><span>00:00:00</span></div>
      </div>
    </div>
  </form>
</div>

<div class="cd-popup" role="alert">
  <div class="cd-popup-container">
    <p>Are you sure you want to submit this task?</p>
    <ul class="cd-buttons">
      <li><a href="javascript:void(0)" class="alert-yes">Yes</a></li>
      <li><a href="javascript:void(0)" class="alert-no">No</a></li>
    </ul>
    <a href="javascript:void(0)" class="cd-popup-close img-replace">&nbsp;</a>
  </div>
  <!-- cd-popup-container -->
</div>
<!-- cd-popup -->
<script>
  user = <%- JSON.stringify(user.email) %>;
</script>
<script src="/scripts/custom.js" defer></script>
<%- include('partials/footer'); -%>
